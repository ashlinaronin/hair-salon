<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>
        <link rel='stylesheet' href='/styles/styles.css' />
        <title>Edit stylist: {{ stylist.getName }}</title>
    </head>
    <body>

        <!-- start nav -->
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">
                        <img alt="Salon" src="/img/scissors-icon.png" id="scissors">
                        <span id="belinda">Belinda's Beauty Shoppe</span>
                    </a>
                </div>
            </div>
        </nav>
        <!-- end nav -->


        <div class='container-fluid'>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Update {{ stylist.getName }}'s Contact Info </h3>
                </div>
                <div class="panel-body">
                    <form action="/stylists/{{ stylist.getId }}" class="form-vertical" method="post">
                        <input name="_method" type="hidden" value="patch">
                        <div class='form-group'>
                            <label for="phone" class="control-label">New Phone Number:</label>
                            <input id="phone" name="phone" type="number" maxlength="10" required>
                        </div>
                        <button type="submit" class="btn btn-default btn-md">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Update
                        </button>
                    </form>

                    <form action="/stylists/{{ stylist.getId }}" class="form-horizontal" method="post">
                        <input name="_method" type="hidden" value="delete">
                        <button type="submit" class="btn btn-default btn-md">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>Fire this stylist
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
