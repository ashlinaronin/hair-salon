<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>
        <link rel='stylesheet' href='styles/styles.css' />
        <title>Hair Salon</title>
    </head>
    <body>
        <!-- start nav -->
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">
                        <img alt="Salon" src="/img/scissors-icon.png" id="scissors">
                        <span id="belinda">Belinda's Beauty Shoppe</span>
                    </a>
                </div>
            </div>
        </nav>
        <!-- end nav -->


        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <div class="panel panel-default" id="stylists">
                        <div class="panel-heading">
                            <h3>Stylists</h3>
                        </div>
                        <div class="panel-body">
                            {% if stylists is not empty %}
                                <div class="list-group">
                                    {% for stylist in stylists %}
                                        <a class="list-group-item" href="/stylists/{{ stylist.getId }}">{{ stylist.getName }}</a></li>
                                    {% endfor %}
                                </div>

                                <form action="/" method="post">
                                    <input name="_method" type="hidden" value="delete">
                                    <button type="submit" class="btn btn-danger">Clear all</button>
                                </form>
                            {% else %}
                                <p>There are no stylists yet.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <!-- new stylist form -->

                    <div class="col-sm-6">
                        <div class="panel panel-default" id="stylist-form">
                            <div class="panel-heading">
                                <h3>Add new stylist</h3>
                            </div>
                            <div class="panel-body">
                                <form action="/stylists" class="form-horizontal" method="post">
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="name">Name:</label>
                                        <div class="col-sm-9">
                                            <input id="name" name="name" type="text" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="phone">Phone:</label>
                                        <div class="col-sm-9">
                                            <input id="phone" name="phone" type="number" maxlength="10" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="specialty">Specialty:</label>
                                        <div class="col-sm-9">
                                            <input id="specialty" name="specialty" type="text" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for='weekends'>Available weekends?</label>
                                            <br>
                                        <div class="col-sm-9">
                                            <label class="radio-inline"><input type="radio" name="weekends" value="1" required>Yes</label>
                                            <label class="radio-inline"><input type="radio" name="weekends" value="0" required>No</label>
                                        </div>

                                    </div>
                                    <button type="submit" class="btn btn-default btn-md" id="add_stylist">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Stylist
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- end new stylist form -->
            </div>
        </div>
    </body>
</html>
